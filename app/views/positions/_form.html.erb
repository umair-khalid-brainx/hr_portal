<div class="px-5 py-2 mx-5">
  <%= form_with model: @position do |form| %>
    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :name %><br></div>
      <div><%= form.text_field :name, size: "30x1"  %></div>
      <% position.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :description %><br></div>
      <div><%= form.text_area :description, size: "100x5" %><br></div>
      <% position.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :deadline %><br></div>
      <div><%= form.date_select :deadline%><br></div>
      <% position.errors.full_messages_for(:deadline).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :available %><br></div>
      <div><%= form.text_field :available, size: "10x1"  %><br></div>
      <% position.errors.full_messages_for(:available).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :logo %><br></div>
      <div><%= form.file_field :logo %><br></div>
      <% position.errors.full_messages_for(:logo).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <button class="my-3 btn btn-primary">
      <%= form.submit :class => "btn" %>
    </button>
  <% end %>
</div>
