<div class="px-5 py-2 mx-5">
  <%= form_with model: position do |form| %>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :name %></div>
      <div><%= form.text_field :name, size: "30x1", required: true  %></div>
      <% position.errors.full_messages_for(:name).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :description %></div>
      <div><%= form.text_area :description, size: "100x5", required: true %></div>
      <% position.errors.full_messages_for(:description).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :date_starts_at %></div>
      <div><%= form.date_select :date_starts_at, required: true %></div>
      <% position.errors.full_messages_for(:date_starts_at).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :date_ends_at %></div>
      <div><%= form.date_select :date_ends_at, required: true %></div>
      <% position.errors.full_messages_for(:date_ends_at).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :number_of_positions %></div>
      <div><%= form.text_field :number_of_positions, size: "10x1", required: true  %></div>
      <% position.errors.full_messages_for(:number_of_positions).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <div class="my-1">
      <div class="form-label fw-bold"><%= form.label :logo %></div>
      <div><%= form.file_field :logo, required: true %></div>
      <% position.errors.full_messages_for(:logo).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <button class="my-3 btn btn-primary">
      <%= form.submit :class => "btn" %>
    </button>
  <% end %>
</div>
