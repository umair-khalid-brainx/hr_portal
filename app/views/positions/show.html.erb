<%= stylesheet_link_tag "main", "data-turbo-track": "reload" %>

<h1 class="display-1 text-center bg-primary py-2 no-gutter m-0">HR Portal</h1>
<div class="mb-5"><%= render "positions/nav2" %></div>
<div class="mx-5">
  <h1> <%= @position.name %></h1>
  <p class="lead"> <strong>Description: </strong><%= @position.description %></p>
  <p class="lead"> <strong>Deadline to Apply: </strong><%= @position.deadline.strftime("%d/%m/%Y") %></p>
  <p class="lead"> <strong>Available Openings: </strong><%= @position.available %></p>
</div><hr>

<div class="mx-5">
  <h3>Candidates</h3><hr>
  <div class="mx-auto">
    <% @position.candidates.each do |candidate| %>
      <div class="card mx-5 my-3 p-2" style="display: inline-block; width: 40%;">
        <div class="card-body">
          <h5 class="card-title"><%= candidate.name %></h5>
          <p class="card-text"><strong>Email: </strong><%= candidate.email %></p>
          <p class="card-text"><strong>Phone Number: </strong><%= candidate.phone %></p>
          <p class="card-text"><strong>University: </strong><%= candidate.university %></p>
          <p class="card-text"><strong>GPA: </strong><%= candidate.gpa %></p>
          <p class="card-text"><strong>Bio: </strong><%= candidate.bio %></p>
          <%= link_to "Edit Candidate", edit_candidate_path(position) %>
          <%= link_to "Delete Candidate", :controller=>"candidates", :action=>"destroy", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
