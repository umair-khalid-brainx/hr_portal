<%= stylesheet_link_tag "main", "data-turbo-track": "reload" %>

<h1 class="display-1 text-center bg-primary py-2 m-0">HR Portal</h1>
<div class="mb-5"><%= render "positions/nav1" %></div>
<h1 class="display-5 text-center mb-5">Current Job Positions</h1>

<div class="justify-content-between">
  <% @positions.each do |position| %>
    <div class="card mx-5 my-3 p-2" style="display: inline-block; width: 40%;">
      <div class="card-body">
        <% if position.logo.attached? %>
          <% puts "==================== LOGO IS ATTACHED ====================" %>
          <div><%= image_tag position.logo, width: "20%", height: "10%" %></div>
        <% end %>
        <h5 class="card-title"><%= link_to position.name, position %></h5>
        <p class="card-text"><%= position.description %></p>
        <p class="card-text fw-bold">Deadline: <%= position.deadline.strftime("%d/%m/%Y") %></p>
        <p class="card-subtitle fw-bold">Positions: <%= position.available %></p>
      </div>
    </div>
  <% end %>
</div>



