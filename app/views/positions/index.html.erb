<div class="mb-5"><%= render "positions/header" %></div>
<h1 class="display-5 text-center mb-5">Current Job Openings</h1>

<div class="d-block mx-auto">
  <% @positions.each do |position| %>
    <div class="card mx-5 my-3 p-2 d-inline-flex h-100" style="width: 43%;">
      <div class="card-body">
        <% if position.logo.attached? %>
          <div class="p-3"><%= image_tag position.logo, width: "15%", height: "7%" %></div>
        <% end %>
        <h5 class="card-title"><%= link_to position.name, position %></h5>
        <p class="card-text"><%= position.description %></p>
        <p class="card-text fw-bold">Start Date: <%= position.started_at.strftime("%d/%m/%Y") %></p>
        <p class="card-text fw-bold">End Date: <%= position.ends_at.strftime("%d/%m/%Y") %></p>
        <p class="card-subtitle fw-bold">Positions: <%= position.vacancies %></p>
      </div>
    </div>
  <% end %>
</div>



